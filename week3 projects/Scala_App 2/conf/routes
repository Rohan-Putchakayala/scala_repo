# Routes
# This file defines all application routes (Higher priority routes first)

# Room Reservation API
POST    /api/reservations                          controllers.ReservationController.createReservation()
GET     /api/reservations/availability             controllers.ReservationController.checkAvailability()
GET     /api/reservations/active                   controllers.ReservationController.getActiveReservations()
GET     /api/rooms                                 controllers.ReservationController.getAllRooms()

# Scheduled job endpoints (can be called by cron jobs or schedulers)
POST    /api/reservations/process-reminders        controllers.ReservationController.processReminders()
POST    /api/reservations/process-auto-releases     controllers.ReservationController.processAutoReleases()
