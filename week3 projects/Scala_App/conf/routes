# Routes
# This file defines all application routes (Higher priority routes first)

# Visitor Management API
POST    /api/visitors/check-in                  controllers.VisitorController.checkIn()
PUT     /api/visitors/check-out/:id             controllers.VisitorController.checkOut(id: Long)

# List active visitors
GET     /api/visitors/active                    controllers.VisitorController.getActiveVisitors()

# Fetch visitor by ID
GET     /api/visitors/:id                       controllers.VisitorController.getVisitor(id: Long)
